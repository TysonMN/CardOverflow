<div class="top-row pl-4 navbar navbar-dark">
  <a class="navbar-brand" href="">CardOverflow.Web</a>
  <button class="navbar-toggler" onclick="@ToggleNavMenu">
    <span class="navbar-toggler-icon"></span>
  </button>
</div>

<div class="@NavMenuCssClass" onclick="@ToggleNavMenu">
  <ul class="nav flex-column">
    <li class="nav-item px-3">
      <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
        <span class="oi oi-home" aria-hidden="true"></span> Home
      </NavLink>
    </li>
    <li class="nav-item px-3">
      <NavLink class="nav-link" href="Counter">
        <span class="oi oi-plus" aria-hidden="true"></span> Counter
      </NavLink>
    </li>
    <li class="nav-item px-3">
      <NavLink class="nav-link" href="FetchData">
        <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
      </NavLink>
    </li>
    <li class="nav-item px-3">
      <NavLink class="nav-link" href="CreateCard">
        <span class="oi oi-list-rich" aria-hidden="true"></span> Create Card
      </NavLink>
    </li>
    <li class="nav-item px-3">
      <NavLink class="nav-link" href="ViewCards">
        <span class="oi oi-list-rich" aria-hidden="true"></span> View Cards
      </NavLink>
    </li>
    <li class="nav-item px-3">
      <NavLink class="nav-link" href="TestCards">
        <span class="oi oi-list-rich" aria-hidden="true"></span> Test Cards
      </NavLink>
    </li>
    <li class="nav-item px-3">
      <NavLink class="nav-link" href="Webcam">
        <span class="oi oi-list-rich" aria-hidden="true"></span> Webcam
      </NavLink>
    </li>
  </ul>
</div>

@functions {
  bool collapseNavMenu = true;

  string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

  void ToggleNavMenu() {
    collapseNavMenu = !collapseNavMenu;
  }
}
