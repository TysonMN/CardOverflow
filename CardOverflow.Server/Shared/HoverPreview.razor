<span class="curate-tooltip-target">
  <span class="px-@Padding oi oi-eye@(IsAcquired ? " text-success" : "")" aria-hidden="true">@AdditionalHoverTarget</span>
  <span class="curate-tooltip-content">
    @ChildContent
  </span>
</span>

@code {
  [Parameter] public RenderFragment ChildContent { get; set; }
  [Parameter] public RenderFragment AdditionalHoverTarget { get; set; }
  [Parameter] public bool IsAcquired { get; set; }
  [Parameter] public int Padding { get; set; } = 3;
}
